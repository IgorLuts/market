<% content_for :user_menu do %>
    <%= render 'users/user_menu' %>
<% end %>
<div class="box" >
<h1>Мои заказы</h1>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Номер заказы</th>
                <th>Дата</th>
                <th>Всего</th>
                <th>Статус</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
            <tr>
                <td># <%= order.id %></td>
                <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
                <td><%= order.total_price %></td>
                <td><span class="label label-info">В обработке</span>
                </td>
                <td><%= link_to "Посмотреть", order, class: "btn btn-primary btn-sm" %>
                </td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>

</div>
