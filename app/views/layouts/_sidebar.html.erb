<div class="left-sidebar">  
  <div class="category_products">
    <h2>Категории</h2>
    <div id="category_menu">
      <%= arranged_tree_as_list(@categories_list, {:sort_by => [:position], 
          :ul_class_top => [:nav, :sidebar], :ul_class_children => [:nav, :sidebar]}) do |category| %>
        <%= link_to category.name, category_path(category) %>
      <% end %>                   
    </div>
  </div>
</div>
